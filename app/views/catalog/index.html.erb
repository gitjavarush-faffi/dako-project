<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Dako Catalog</h1>
<% @products.each do |product| %>
    <div class="entry">
      <%= image_tag(product.image_url) %>
      <h3> <%= product.title %> </h3>
      <%= sanitize(product.description, tags:%w{p em}).truncate(150, :separator => " ").html_safe %>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price) %></span>
      </div>
    </div>
<% end %>